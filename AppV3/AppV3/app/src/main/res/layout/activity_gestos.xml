<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shates.appv3.Gestos"
    android:background="#2D2D2D">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gestos"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#45CFF3"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre: "
                android:id="@+id/textView4"
                android:textColor="#D7DBDE"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/editText"
                android:layout_toLeftOf="@+id/editText"
                android:layout_toStartOf="@+id/editText"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:textColor="#D7DBDE"
                android:textSize="25dp"
                android:textStyle="normal"
                android:width="200dp"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="#423B35" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Funcion:"
                android:id="@+id/textView6"
                android:textSize="25dp"
                android:textColor="#D7DBDE"
                android:textStyle="bold"
                android:layout_weight="0.03"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <Spinner
                android:layout_width="224dp"
                android:layout_height="52dp"
                android:id="@+id/spinner"
                android:entries="@array/acciones"
                android:focusable="false"
                android:background="@color/background_floating_material_dark"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Capturar"
            android:id="@+id/button2"
            android:background="#A4374A"
            android:textColor="#D7DBDE"
            android:textSize="15dp"
            android:width="100dp"
            android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginTop="30dp"
            android:maxHeight="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton5"
                android:background="@drawable/ret"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:onClick="ret2" />

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton6"
                android:background="@drawable/home"
                android:layout_marginLeft="80dp"
                android:onClick="inicio3" />

            <Button
                android:layout_width="73dp"
                android:layout_height="33dp"
                android:text="Guardar"
                android:id="@+id/button4"
                android:layout_below="@+id/textView3"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#D7DBDE"
                android:background="#A4374A"
                android:width="90dp"
                android:layout_weight="0"
                android:layout_marginLeft="70dp"
                android:onClick="save2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
