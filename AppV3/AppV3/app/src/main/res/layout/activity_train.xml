<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shates.appv3.train"
    android:background="#2D2D2D">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Train Set"
        android:id="@+id/textView2"
        android:textColor="#45CFF3"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selecciona la opcion a entrenar"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#D7DBDE"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/radioGroup"
        android:onClick="onSubmit"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gestos"
            android:id="@+id/radioButton"
            android:textColor="#D7DBDE"
            android:textSize="30dp"
            android:background="#423B35" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion"
            android:id="@+id/radioButton2"
            android:textSize="30dp"
            android:textColor="#D7DBDE"
            android:background="#423B35" />
    </RadioGroup>

    <Button
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/button3"
        android:textColor="#D7DBDE"
        android:background="#A4374A"
        android:layout_gravity="center_horizontal"
        android:onClick="onSubmit"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/home"
        android:layout_gravity="right"
        android:layout_marginTop="160dp"
        android:layout_marginRight="150dp"
        android:onClick="inicio"/>
    </LinearLayout>

</RelativeLayout>
