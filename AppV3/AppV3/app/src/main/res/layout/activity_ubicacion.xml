<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shates.appv3.ubicacion"
    android:background="#ff222222">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Set"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textColor="#45CFF3"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="25dp"
                android:layout_below="@+id/textView"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:layout_marginTop="20dp"
                android:textColor="#45CFF3"
                android:layout_weight="0.31"
                android:textAlignment="gravity" />

            <EditText
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:textSize="25dp"
                android:layout_above="@+id/button2"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button"
                android:textColor="#D7DBDE"
                android:background="#423B35"
                android:layout_weight="1"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Escanear"
            android:id="@+id/button"
            android:layout_alignTop="@+id/button2"
            android:layout_alignRight="@+id/listView"
            android:layout_alignEnd="@+id/listView"
            android:textColor="#D7DBDE"
            android:background="#A4374A"
            android:width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="cambio" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:id="@+id/listView"
            android:background="@color/background_floating_material_dark"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:textColor="#45CFF3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:layout_gravity="right">

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/ret"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:onClick="ret1" />

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/home"
                android:layout_marginLeft="90dp"
                android:onClick="inicio2" />

            <Button
                android:layout_width="73dp"
                android:layout_height="33dp"
                android:text="Guardar"
                android:id="@+id/button2"
                android:layout_below="@+id/textView3"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#D7DBDE"
                android:background="#A4374A"
                android:width="90dp"
                android:layout_weight="0"
                android:layout_marginLeft="80dp"
                android:onClick="save1" />

        </LinearLayout>

    </LinearLayout>

    <!--android:src="@drawable/abc"-->

</RelativeLayout>
